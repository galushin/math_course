\begin_layout Solution
Обозначим 
\begin_inset Formula $a^{\prime}=g\circ a\circ g^{-1}$
\end_inset

 и 
\begin_inset Formula $b^{\prime}=g\circ b\circ g^{-1}$
\end_inset

, тогда 
\begin_inset Formula $g\circ a=a^{\prime}\circ g$
\end_inset

, 
\begin_inset Formula $b=g^{-1}\circ b^{\prime}\circ g$
\end_inset

, 
\begin_inset Formula $a=g^{-1}\circ a^{\prime}\circ g$
\end_inset

, 
\begin_inset Formula $a^{-1}=g^{-1}\circ\left(a^{\prime}\right)^{-1}\circ g$
\end_inset

, 
\begin_inset Formula $b^{-1}=g^{-1}\circ\left(b^{\prime}\right)^{-1}\circ g$
\end_inset

 и 
\begin_inset Formula $b^{-1}\circ g^{-1}=g^{-1}\circ\left(b^{\prime}\right)^{-1}$
\end_inset

, поэтому 
\begin_inset Formula 
\begin{multline*}
g\circ\left[a,b\right]\circ g^{-1}=\\
=a^{\prime}\circ g\circ g^{-1}\circ b^{\prime}\circ g\circ g^{-1}\circ\left(a^{\prime}\right)^{-1}\circ g\circ g^{-1}\circ\left(b^{\prime}\right)^{-1}=\\
=a^{\prime}\circ b^{\prime}\circ\left(a^{\prime}\right)^{-1}\circ\left(b^{\prime}\right)^{-1}=\left[a^{\prime},b^{\prime}\right]\in K\left(G\right).
\end{multline*}

\end_inset


\end_layout

